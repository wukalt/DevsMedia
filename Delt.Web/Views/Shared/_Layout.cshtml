<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Delt.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Delt.Web.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Baloo+Bhaijaan+2" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-toggleable-sm navbar-light border-bottom box-shadow navbar-expand-sm bg-dark mb-3" data-bs-theme="dark">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index">
                    <img class="navbar-brand" src="~/images/delt.ico" alt="site icon" />
                </a>
                <button class="navbar-toggler btn-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">خانه  <i class="bi bi-house"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Blog" asp-action="Index">بلاگ  <i class="bi bi-text-left"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Book" asp-action="Index">کتاب  <i class="bi bi-book"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Community" asp-action="Index">انجمن  <i class="bi bi-people"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Seminar" asp-action="Index">سمینار  <i class="bi bi-easel"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">قوانین  <i class="bi bi-shield"></i></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">مدیریت محتوا  <i class="bi bi-gear"></i></a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item text-white" asp-controller="Blog" asp-action="Manage">بلاگ  <i class="bi bi-text-left"></i></a>
                                <a class="dropdown-item text-white" asp-controller="Book" asp-action="Manage">کتاب  <i class="bi bi-book"></i></a>
                                <a class="dropdown-item text-white" asp-controller="Seminar" asp-action="Manage">سمینار  <i class="bi bi-easel"></i></a>
                                <div class="dropdown-divider"></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_ValidationScriptsPartial"></partial>
            <partial name="_Notification"></partial>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            تمامی حقوق مادی و معنوی این سایت متعلق به DeLT می باشد <i class="bi bi-shield-lock"></i>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/typing.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tiny.cloud/1/spjtfdwzjlfp1rih1ljg0spt7ruihd08wdra5r10vto39pf5/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/tiny.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>