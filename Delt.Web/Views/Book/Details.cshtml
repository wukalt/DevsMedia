@model Book

<div class="container text-center">
    <div class="row mb-4">
        <h3>@Model.Title</h3>
        <hr />
        <div class="text-center">
            <img class="img-cover" src="@Model.CoverImage" alt="@Model.Title" />
        </div>
    </div>
    <hr />
    <div class="row mt-2">
        <p class="mb-2">نام نویسنده : @Model.Author</p>
        <p class="mb-2">منتشر : @Model.Publisher</p>
        <small class="mb-2">تاریخ انتشار کتاب : @Model.ReleaseTime.ConvertToShamsi()</small>
    </div>
    <div class="row btn-group mt-3">
        <div class="col-md-6">
            <a href="@Model.DownloadLink" target="_blank" class="btn btn-primary">دانلود<br /><i class="bi bi-download"></i></a>
        </div>

        <div class="col-md-6">
            <a asp-controller="Book" asp-action="Index" class="btn btn-secondary btn-outline-dark">بازگشت<br /><i class="bi bi-arrow-right-circle"></i></a>
        </div>

    </div>
</div>